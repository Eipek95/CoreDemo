@model CoreDemo.Models.RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



<form method="post">
    <div class="form-group">
        <label>Role ID</label>
        <input type="text" name="Id" value="@Model.Id" class="form-control" />
    </div>
    <div class="form-group">
        <label>Role Başlığı</label>
        <input type="text" name="name" value="@Model.name" class="form-control" />
    </div>
    <button class="btn btn-success">Rol Düzenle</button>
</form>